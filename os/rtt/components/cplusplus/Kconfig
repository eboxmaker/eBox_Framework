menu "C++ features"

config RT_USING_CPLUSPLUS
    bool "Support C++ features"
    default n

if RT_USING_CPLUSPLUS

    config RT_USING_CPLUSPLUS11
        bool "Enable c++11 threading feature support"
        default n
        select RT_USING_LIBC
        select RT_USING_DFS
        select RT_USING_PTHREADS
        select RT_USING_RTC

endif

endmenu
